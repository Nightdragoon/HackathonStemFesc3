@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="d-flex align-items-center justify-content-center min-vh-100" style="background:#f6f7fb">
    <div class="card shadow-sm w-100 mx-3" style="max-width:420px;">
        <div class="card-body p-4 p-md-5">
            <h1 class="h4 fw-semibold mb-1">Iniciar sesión</h1>
            <p class="text-secondary mb-4">Ingresa tus credenciales para continuar.</p>

            @* Mensaje de error opcional desde el backend *@
            @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
            {
                <div class="alert alert-danger" role="alert">@err</div>
            }

            <form asp-controller="Account" asp-action="Login" method="post">
                @* Si tu acción usa [ValidateAntiForgeryToken], mantén esto *@
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Correo electrónico o usuario</label>
                    <input
                        type="text"
                        class="form-control"
                        id="inputEmail"
                        name="email"           @* <-- debe coincidir con el parámetro del action *@
                        placeholder="tu@correo.com"
                        autocomplete="username"
                        required />
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <input
                            type="password"
                            class="form-control"
                            id="inputPassword"
                            name="password"      @* <-- debe coincidir con el parámetro del action *@
                            placeholder="••••••••"
                            autocomplete="current-password"
                            required minlength="6" />
                        <button class="btn btn-outline-secondary" type="button" id="togglePwd">
                            <span id="eyeText">Mostrar</span>
                        </button>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="true" id="rememberMe" name="rememberMe">
                        <label class="form-check-label" for="rememberMe">Recordarme</label>
                    </div>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="small text-decoration-none">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Entrar</button>
                </div>
            </form>

            <p class="text-center mt-4 mb-0">
                ¿No tienes cuenta? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Crear una cuenta</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Mostrar/ocultar contraseña
        const pwd = document.getElementById('inputPassword');
        const btn = document.getElementById('togglePwd');
        const eyeText = document.getElementById('eyeText');
        if (btn && pwd && eyeText) {
            btn.addEventListener('click', () => {
                const isPwd = pwd.type === 'password';
                pwd.type = isPwd ? 'text' : 'password';
                eyeText.textContent = isPwd ? 'Ocultar' : 'Mostrar';
            });
        }
    </script>
}
